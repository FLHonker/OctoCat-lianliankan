<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:background="@drawable/mainbg"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
    <ImageButton android:id="@+id/play_btn"
		android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:layout_centerInParent="true"
		android:background="@drawable/button_go"
    	android:src="@drawable/button_go"/>

    <ImageView android:id="@+id/title_img"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:layout_below="@id/play_btn"
    	android:layout_centerHorizontal="true"
    	android:src="@drawable/title"
    	android:paddingTop="10dip"/>
   	<ImageView
   		android:id="@+id/clock"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:src="@drawable/clock"
    	android:paddingTop="10dip"
    	android:paddingLeft="5dip"
    	android:visibility="gone"/>

	<SeekBar
		android:id="@+id/timer"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:focusable="true"
		android:maxHeight="8dp"
		android:paddingLeft="27dp"
		android:paddingRight="16dp"
		android:paddingTop="8dip"
		android:paddingBottom="5dip"
		android:progress="50"
		android:progressDrawable="@drawable/po_seekbar"
		android:secondaryProgress="50"
		android:thumb="@drawable/seekbar_thumb"
		android:visibility="gone" />

    <!--<SeekBar-->
    	<!--android:id="@+id/timer"-->
    	<!--android:layout_toRightOf="@id/clock"-->
    	<!--android:layout_height="wrap_content"-->
    	<!--android:layout_width="fill_parent"-->
    	<!--android:visibility="gone"-->
    	<!--android:paddingTop="8dip"-->
    	<!--android:paddingLeft="5dip"-->
    	<!--android:paddingRight="10dip"-->
    	<!--android:paddingBottom="5dip"/>-->

    <whu.iss.sric.view.GameView
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:id="@+id/game_view"
    	android:visibility="gone"
    	android:layout_below="@id/timer" />

    <LinearLayout android:id="@+id/help"
		android:orientation="horizontal"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:layout_alignParentBottom="true"
    	android:layout_centerHorizontal="true"
    	android:paddingBottom="10dip" >

		<ImageView android:id="@+id/lefttime_img"
			android:src="@drawable/clock2"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="10dp"
			android:visibility="gone"
			/>
		<TextView android:id="@+id/lefttime_txt"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:background="@drawable/shape"
			android:textColor="@android:color/white"
			android:text="s"
			android:visibility="gone"
			android:textSize="15sp"/>

	    <ImageButton android:id="@+id/refresh_btn"
			android:background="@drawable/refresh"
	    	android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:visibility="gone"/>
	    <TextView android:id="@+id/text_refresh_num"
	    	android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:background="@drawable/shape"
	    	android:textColor="@android:color/white"
	    	android:text="3"
	    	android:visibility="gone"
	    	android:textSize="15sp"/>
	    <ImageButton android:id="@+id/tip_btn"
	    	android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:background="@drawable/tips"
	    	android:visibility="gone"
	    	/>
	     <TextView android:id="@+id/text_tip_num"
	    	android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:background="@drawable/shape"
	    	android:textColor="@android:color/white"
	    	android:visibility="gone"
	    	android:text="3"
	    	android:textSize="15sp"/>
    </LinearLayout>
</RelativeLayout>
